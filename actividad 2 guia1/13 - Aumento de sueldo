public class Ejercicio13 {
    public static double calcularAumento(double sueldo) {
        if (sueldo <= 800000) {
            return sueldo * 0.1;
        } else if (sueldo <= 1200000) {
            return sueldo * 0.08;
        } else {
            return sueldo * 0.05;
        }
    }

    public static void main(String[] args) {
        double sueldo = 850000;
        double aumento = calcularAumento(sueldo);
        double nuevoSueldo = sueldo + aumento;
        
        System.out.println("El aumento es: " + aumento);
        System.out.println("El nuevo sueldo es: " + nuevoSueldo);
    }
}
